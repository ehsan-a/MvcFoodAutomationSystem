@using Domain.Entities
@model AppSetting
@{
    ViewData["Title"] = "Settings";
}

<div class="container py-4">

    <!-- Header -->
    <div class="mb-4">
        <h1 class="fw-bold text-dark mb-1">Settings</h1>
        <p class="text-muted">Manage cafeteria settings and configurations</p>
    </div>

    <!-- Settings Sections -->
    <div class="d-flex flex-column gap-4">

        <!-- Reservation Settings -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h4 class="fw-bold text-dark mb-3">Reservation Settings</h4>

                <div class="d-flex flex-column gap-3">

                    <div>
                        <label class="form-label fw-semibold">Reservation Deadline (hours before meal)</label>
                        <input type="number" class="form-control" value="24" placeholder="24">
                        <small class="text-muted">Students must reserve meals at least this many hours in advance</small>
                    </div>

                    <div>
                        <label class="form-label fw-semibold">Maximum Daily Capacity</label>
                        <input type="number" class="form-control" value="150" placeholder="150">
                        <small class="text-muted">Maximum number of reservations allowed per day</small>
                    </div>

                    <div>
                        <label class="form-label fw-semibold">Cancellation Deadline (hours before meal)</label>
                        <input type="number" class="form-control" value="12" placeholder="12">
                        <small class="text-muted">Students can cancel reservations up to this many hours before the meal</small>
                    </div>

                </div>
            </div>
        </div>

        <!-- Operating Hours -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h4 class="fw-bold text-dark mb-3">Operating Hours</h4>

                <div class="row g-4">

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Breakfast</label>
                        <div class="d-flex gap-2">
                            <input type="time" class="form-control" value="07:00" />
                            <input type="time" class="form-control" value="09:00" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Lunch</label>
                        <div class="d-flex gap-2">
                            <input type="time" class="form-control" value="12:00" />
                            <input type="time" class="form-control" value="14:00" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Dinner</label>
                        <div class="d-flex gap-2">
                            <input type="time" class="form-control" value="18:00" />
                            <input type="time" class="form-control" value="20:00" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Wallet Settings -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h4 class="fw-bold text-dark mb-3">Wallet Settings</h4>

                <div class="d-flex flex-column gap-3">

                    <div>
                        <label class="form-label fw-semibold">Minimum Wallet Balance</label>
                        <input type="number" step="0.01" class="form-control" value="10.00" placeholder="10.00">
                        <small class="text-muted">Minimum balance required to make a reservation</small>
                    </div>

                    <div>
                        <label class="form-label fw-semibold">Maximum Top-up Amount</label>
                        <input type="number" step="0.01" class="form-control" value="500.00" placeholder="500.00">
                        <small class="text-muted">Maximum amount allowed for a single wallet top-up</small>
                    </div>

                </div>
            </div>
        </div>

        <!-- Notification Settings -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h4 class="fw-bold text-dark mb-3">Notification Settings</h4>

                <div class="d-flex flex-column gap-3">

                    <!-- Toggle Component -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="fw-semibold text-dark mb-0">Email Notifications</p>
                            <small class="text-muted">Send email confirmations for reservations</small>
                        </div>

                        <div class="form-check form-switch fs-4">
                            <input class="form-check-input" type="checkbox" checked>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="fw-semibold text-dark mb-0">SMS Notifications</p>
                            <small class="text-muted">Send SMS reminders before meal times</small>
                        </div>

                        <div class="form-check form-switch fs-4">
                            <input class="form-check-input" type="checkbox">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="fw-semibold text-dark mb-0">Low Balance Alerts</p>
                            <small class="text-muted">Notify students when wallet balance is low</small>
                        </div>

                        <div class="form-check form-switch fs-4">
                            <input class="form-check-input" type="checkbox" checked>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2">
                <i class="bi bi-save"></i> Save Settings
            </button>
        </div>

    </div>
</div>
